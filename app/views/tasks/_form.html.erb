<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= if @task.new_record? == false then f.label :completed end%>
  <%= if @task.new_record? == false then f.check_box :completed end%>
  <%= f.submit %>
<% end %>
